<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>internalpluginmanager-user</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<!-- Standalone version. -->
		<file>
			<source>${project.build.directory}/jars/standalone/internalpluginmanager-standalone_v${project.version}.jar</source>
			<outputDirectory>/InternalPluginManager/Standalone/</outputDirectory>
			<destName>InternalPluginManager-Standalone_v${project.version}.jar</destName>
		</file>
		
		<!-- Minecraft server versions. -->
		<!-- Bukkit version. -->
		<file>
			<source>${project.build.directory}/jars/minecraft/internalpluginmanager-minecraft-bukkit_v${project.version}.jar</source>
			<outputDirectory>/InternalPluginManager/Minecraft/</outputDirectory>
			<destName>InternalPluginManager-for-Bukkit_v${project.version}.jar</destName>
		</file>
		<!-- Canary version. -->
		<file>
			<source>${project.build.directory}/jars/minecraft/internalpluginmanager-minecraft-canary_v${project.version}.jar</source>
			<outputDirectory>/InternalPluginManager/Minecraft/</outputDirectory>
			<destName>InternalPluginManager-for-Canary_v${project.version}.jar</destName>
		</file>

		<!-- InternalPluginManager Extensions. -->
		<!-- Network extension -->
		<file>
			<source>${project.build.directory}/jars/extensions/internalpluginmanager-network-extension_v${project.version}.jar</source>
			<outputDirectory>/InternalPluginManager/Extensions/</outputDirectory>
			<destName>InternalPluginManager-Network-Extension_v${project.version}.jar</destName>
		</file>
	</files>
</assembly>
