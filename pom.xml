		</plugins>

		<resources>
			<resource>
				<directory>src/main/resources/</directory>
				<excludes>
					<exclude>plugin.yml</exclude> <!-- We do not want to include the raw plugin.yml -->
				</excludes>
			</resource>
			<resource>
				<directory>target/generated-resources/</directory>
